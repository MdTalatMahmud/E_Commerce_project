                            @*     <th rowspan="1" colspan="1">Salary</th> *@
                            @* </tr> *@
                            </tfoot>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(Model.IndexOf(item) + 1)</td>
                                    <td>@item.CategoryName</td>
                                    <td><a href="#">Edit</a></td>
                                </tr>
                            }

